<h3>Listing categories</h3>

<% @categories.arrange_as_array.each do |category| %>
  <div class="span8 offset<%= category.depth %>">
    <div class="btn-toolbar">
      <div class="btn-group">
        <button class="btn"><%= category.title %></button>
        <%= link_to "编辑", edit_category_path(category), :class => "btn" %>
        <%= link_to 'Remove', category_path(category), :method => :delete, :class => "btn" %>
      </div>
    </div>
  </div>
<% end %>

<%= link_to 'New Category', new_category_path %>
