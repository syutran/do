<h1>Listing assignments</h1>

<table>
  <tr>
    <th>Title</th>
    <th>User</th>
    <th>Category</th>
    <th>Circle</th>
    <th>Typies</th>
    <th>Timelimit</th>
    <th>Validate</th>
    <th>Invalidate</th>
    <th>Discription</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @assignments.each do |assignment| %>
  <tr>
    <td><%= assignment.title %></td>
    <td><%= assignment.user_id %></td>
    <td><%= assignment.category_id %></td>
    <td><%= assignment.circle_id %></td>
    <td><%= assignment.typies %></td>
    <td><%= assignment.timelimit %></td>
    <td><%= assignment.validate %></td>
    <td><%= assignment.invalidate %></td>
    <td><%= assignment.discription %></td>
    <td><%= link_to 'Show', assignment %></td>
    <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
    <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

