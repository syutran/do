<% if flash[:alert] %>
  <%= flash[:alert] %>
<% end %>

  <h3> 登录 </h3>
  <div class="span4">
<%= form_tag do %>
  <div class="row">
    <%= label_tag :email, 'Email', class: 'control-label' %>
    <%= text_field_tag :email, params[:email], class: 'input-xlarge focused' %>
  </div>
  <div class="row">
    <%= label_tag :password, 'Password', class: 'control-label' %>
    <%= password_field_tag :password, params[:password], class: 'input-xlarge' %>
  </div>
  <div class="row">
    <%= submit_tag "Login", class: 'btn btn-success' %>
  </div>
<% end %>
</div>
